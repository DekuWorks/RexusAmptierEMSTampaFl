{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "RexusOps360.API": "Information"
    }
  },
  "AllowedHosts": "*",
  "Security": {
    "Jwt": {
      "Key": "YourSuperSecretKeyHere12345678901234567890",
      "Issuer": "RexusOps360",
      "Audience": "RexusOps360Users",
      "ExpirationHours": 8,
      "RefreshTokenExpirationDays": 30
    },
    "Password": {
      "MinLength": 8,
      "MaxLength": 100,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireSpecialCharacter": true,
      "MaxFailedAttempts": 5,
      "LockoutDurationMinutes": 15,
      "PasswordHistoryCount": 5,
      "PasswordExpirationDays": 90
    },
    "RateLimit": {
      "RequestsPerMinute": 100,
      "RequestsPerHour": 1000,
      "BurstLimit": 10,
      "ExemptPaths": ["/health", "/swagger", "/static"]
    },
    "Session": {
      "IdleTimeoutMinutes": 30,
      "AbsoluteTimeoutHours": 24,
      "SlidingExpiration": true,
      "CookieName": "RexusOps360.Session",
      "HttpOnly": true,
      "Secure": true,
      "SameSite": "Strict"
    },
    "Cors": {
      "AllowedOrigins": ["*"],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "AllowedHeaders": ["*"],
      "AllowCredentials": true,
      "MaxAgeSeconds": 86400
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EmsTampaDb;Trusted_Connection=true;MultipleActiveResultSets=true",
    "SqlServerConnection": "Server=localhost,1433;Database=EmsTampaDb;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyHere12345678901234567890",
    "Issuer": "RexusOps360",
    "Audience": "RexusOps360Users",
    "ExpiryHours": 8
  }
}
